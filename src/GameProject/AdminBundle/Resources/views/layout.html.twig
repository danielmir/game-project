{% extends '::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-3 pull-right">
        <a href="{{ path('logout') }}" class="pull-right logout-button">Logout</a>
    </div>
</div>
<div class="row">
    <div class="col-md-3 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" {{ (page is defined and page == 'games') ? 'class="active"' : '' }}>
                <a href="{{ path('admin_game_index') }}">Games</a>
            </li>
            <li role="presentation" {{ (page is defined and page == 'categories') ? 'class="active"' : '' }}>
                <a href="{{ path('admin_category_index') }}">Categories</a>
            </li>
            <li role="presentation" {{ (page is defined and page == 'subdomains') ? 'class="active"' : '' }}>
                <a href="{{ path('admin_subdomain_index') }}">Subdomains</a>
            </li>
        </ul>
    </div>

    <div class="col-md-9 main">
        <div class="main-block">
            {% block mainBlock %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}

