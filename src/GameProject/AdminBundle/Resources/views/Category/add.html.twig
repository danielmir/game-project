{% set page = 'categories' %}
{% extends 'GameProjectAdminBundle::layout.html.twig' %}

{% block mainBlock %}
    <div class="page-header">
        <h1>Add category</h1>
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-md-6">
                {% form_theme form 'form/fields.html.twig' %}
                {{ form_start(form) }}
                    {{ form_row(form.name) }}

                    {% if form.subdomain.vars.choices is empty %}
                        <p>There are no subdomains yet. <a href="{{ path('admin_add_subdomain_view') }}">Add here</a></p>
                    {% else %}
                        {{ form_row(form.subdomain) }}
                    {% endif %}

                    {{ form_row(form.save) }}
                    {{ form_row(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}